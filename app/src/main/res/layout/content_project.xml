<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/content_project"
    android:gravity="center_horizontal"
    tools:context="com.innovation.innovation.ProjectContent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product ID"
        android:id="@+id/productID" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product"
        android:layout_below="@+id/productID"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Product Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productDescription"
        android:layout_below="@+id/product"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Description"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productType"
        android:layout_below="@+id/productDescription"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Project Type"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productPurpose"
        android:layout_below="@+id/productType"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Project Purpose"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productLocation"
        android:layout_below="@+id/productPurpose"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Location"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productSchools"
        android:layout_below="@+id/productLocation"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="School(s)"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productContacts"
        android:layout_below="@+id/productSchools"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Contacts"/>

    <ImageView
        android:layout_width="500px"
        android:layout_height="200px"
        android:id="@+id/picture"
        android:src="@drawable/ic_action_name"
        android:layout_below="@+id/productContacts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />
</RelativeLayout>
